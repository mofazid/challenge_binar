<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="css/home.css">
  <title>Document</title>
</head>
 

<body>
  <h1 class="d-flex justify-content-center py-5">
    Users
  </h1>

  <div class="container add-menu py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-10 ">
          <form action="" class=" ">
            <div class="mb-3">
              <label >Name</label>
              <input  class="form-control" id="inputName" placeholder="Enter your name">
            </div>
            <div class="form-group">
              <label >Password</label>
              <input type="password" class="form-control" id="inputPassword" placeholder="Password">
            </div>
            <div class="form-group">
              <label >Age</label>
              <input  class="form-control" id="inputAge" placeholder="Insertyour age">
            </div>
            <div class="form-group">
              <label >city</label>
              <input  class="form-control" id="inputCity" placeholder="Insert which city do you live">
            </div>
            <div class="form-group">
              <label >Game</label>
              <input  class="form-control" id="inputGame" placeholder="what game do you play">
            </div>
            <div class="form-group">
              <label >Wins</label>
              <input   class="form-control" id="inputWins" placeholder="how many wins did you get">
            </div>
          </form>
          <button type="submit" id="btnRegister" class="btn btn-primary btn-block" onclick=handleInsertData()>Register User</button>
          <button type="submit" id="btnUpdate" class="btn btn-warning btn-block" onclick=handleUpdateData() disabled>Update User</button>
        <form class="d-flex py-5" role="search">
          <input class="form-control me-2 center" id="searchBar" type="search" placeholder="Search User" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
  
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Name</th>
              <th scope="col">Password</th>
              <th scope="col">Age</th>
              <th scope="col">City</th>
              <th scope="col">Game</th>
              <th scope="col">Win</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < users.length; i++) { %>
            <tr id="<%= users[i].id %>">
              <th scope="row"><%= users[i].id %></th>
              <td><%= users[i].name %></td>
              <td><%= users[i].password %></td>
              <td><%= users[i].age %></td>
              <td><%= users[i].city %></td>
              <td><%= users[i].game %></td>
              <td><%= users[i].wins %></td>
              <td>
                <button type="button"  class="btn btn-primary" onclick=handleUpdateData(<%= users[i].id %>)>Update</button>
                <button type="button" class="btn btn-danger" onclick=handleDeleteData(<%= users[i].id %>)>Delete</button>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

    <script src="/js/home.js"></script>
</body>

</html>